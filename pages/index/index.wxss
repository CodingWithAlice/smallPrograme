/* pages/computed/computed.wxss */
.page-body {
    display: flex;
    align-items: center;
    flex-direction: column;
}
.title {
    font-size: 60rpx;
}
.btn {
    margin: 40rpx 0;
    border: 1px solid #ccc;
    border-radius: 8rpx;
    width: 350rpx;
    font-size: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #eee;
}
.ouput, .input {
    font-size: 35rpx;
    display: flex;
    align-items: center;
}
.show {
    color: red;
    font-weight: 700;
    border: 1px solid red;
    font-size: 55rpx;
    height: 80rpx;
    width: 200rpx;
}

.input-in {
    border: 1px solid #ccc;
    height: 70rpx;
    font-size: 50rpx;
    width: 350rpx;
}